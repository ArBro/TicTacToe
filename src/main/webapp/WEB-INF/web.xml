<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <welcome-file-list>
        <welcome-file>/WEB-INF/index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>HomePageController</servlet-name>
        <servlet-class>nl.arbro.tictactoe.controller.HomePageController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomePageController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GameController</servlet-name>
        <servlet-class>nl.arbro.tictactoe.controller.GameController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GameController</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>HasStartedGame</filter-name>
        <filter-class>nl.arbro.tictactoe.filters.HasStartedGameFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>HasStartedGame</filter-name>
        <url-pattern>/game</url-pattern>
    </filter-mapping>

    
</web-app>